{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES2017",
      "ES2018",
      "ES2019"
    ],
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2015",
  },
  "include": [
    "src/index.tsx"
  ]
}